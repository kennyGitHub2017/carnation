<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>投诉管理 - $!{config.poweredby}</title>
<meta name="keywords" content="$!config.keywords" />
<meta name="description" content="$!config.description" />
<meta name="generator" content="$!{config.meta_generator}" />
<meta name="author" content="$!{config.meta_author}" />
<meta name="copyright" content="$!{config.copyRight}" />
<link href="$!webPath/resources/style/system/front/default/css/public2.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/system/front/default/css/public_auto.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet" />
<link href="$!webPath/resources/style/common/css/overlay.css" type="text/css" rel="stylesheet" />
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/ajaxfileupload.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script>
jQuery(document).ready(function(){
   jQuery("#theForm").validate({
	   rules:{
			 img1:{accept:"$!config.imageSuffix"},
			 img2:{accept:"$!config.imageSuffix"},
			 img3:{accept:"$!config.imageSuffix"},
			 from_user_content:{required:true}
		   },
	   messages:{
			 img1:{accept:"不允许的图片类型"},
			 img2:{accept:"不允许的图片类型"},
			 img3:{accept:"不允许的图片类型"},
			 from_user_content:{required:"投诉内容不能为空"}
		   },
		submitHandler:function(){
			var params = jQuery("#theForm").serializeArray();
			var formData= {};
			jQuery.each(params, function(i, param){
				 formData[param.name] = param.value;
			});
			jQuery.ajaxFileUpload({url:'$!webPath/buyer/complaint_save.htm',
								  dataType:'json',
								  fileElementId:['img1','img2','img3'],
								  data:formData,
								  success:function(data){		
				 					var lin = ""+data.url;	
			 		 					showDialog("msg_info","",data.op_title,0,"succeed",3,function(arg){window.location.href=arg},lin);
								 }
			});
		}
	});
   //
});

</script>
</head>
<body>
$!httpInclude.include("/top.htm")
$!httpInclude.include("/head.htm")
$!httpInclude.include("/nav1.htm")
<div class="main clearfix">
  <div class="usercenter">
         $!httpInclude.include("/buyer/nav.htm?op=complaint")
     <form action="$!webPath/buyer/complaint_save.htm" method="post" enctype="multipart/form-data" id="theForm">
    <div class="usercenter_right">
      <div class="myorder">
        <h4><span class="myorder_fright"></span><strong>我的投诉</strong></h4>
      </div>
      <div class="user_list">
        <div class="user_list_title">
          <ul class="user_title_ul">
            <li class="this"><i></i>发起投诉</li>
          </ul>
        </div>
        <div class="user_list_box">
          #if($!of.orderForm == 0)
          <div class="complaint_one">
            <h1 class="complaint_h">投诉进程</h1>
            <div class="comp_poces">
              <ul>
                <li><b class="this">新投诉</b><em></em></li>
                <li><b>待申诉</b><em></em></li>
                <li><b>对话中</b><em></em></li>
                <li><b>待仲裁</b><em></em></li>
                <li><b>已完成</b></li>
              </ul>
            </div>
          </div>
          #end
          <div class="complaint_one">
            <h1 class="complaint_h">订单详情</h1>
            <div class="comp_goodetails">
              <dl class="comp_goodl">
                <dt>订单信息</dt>
                <dd>
                  <ul class="comp_gdul">
                  		  #if($!obj.orderForm.orderStatus==0)
                          #set($status="已取消")
                          #end
                          #if($!obj.orderForm.orderStatus==10)
                          #set($status="待付款")
                          #end
                          #if($!obj.orderForm.orderStatus==20)
                          #set($status="已付款")
                          #end
                          #if($!obj.orderForm.orderStatus==30)
                          #set($status="已发货")        
                          #end                
                          #if($!obj.orderForm.orderStatus==40)
                          #set($status="已收货")
                          #end
                          #if($!obj.orderForm.orderStatus==50)
                          #set($status="已完成,已评价")                                              
                          #end
                          #if($!obj.orderForm.orderStatus==60)
                          #set($status="已结束")                                              
                          #end
                    <li> 订单状态：<strong>$!status</strong></li>
                    <li> 订单号：<b>$!obj.orderForm.orderId</b> </li>
                    <li> 下单时间：$!CommUtil.formatLongDate($!obj.orderForm.addTime)</li>
                    <li> 订单总额：¥$!{obj.orderForm.totalPrice}</li>
                  </ul>
                </dd>
              </dl>
              #if($!obj.store)
              <dl class="comp_goodl">
                <dt>商家信息</dt>
                <dd>
                  <ul class="comp_gdul">
                    <li> 商家名称：<b><a href="$!webPath/store_$!{obj.store.id}.htm" target="_blank">$!{obj.store.storeName}</a></b></li>
                  </ul>
                </dd>
              </dl>
              #end
              <dl class="comp_goodl">
                <dt>买家信息</dt>
                <dd>
                  <ul class="comp_gdul">
                    <li> 买家名称：$!{of.userName}</li>
                  </ul>
                </dd>
              </dl>
            </div>
          </div>
          <div class="complaint_one">
            <h1 class="complaint_h">投诉详情</h1>
            <div class="comp_goodetails">
              <dl class="comp_goodl">
                <dt>投诉信息</dt>
                <dd>
                  <ul class="comp_gdul">
                    <li> 投诉状态：<strong style="color:#5ac4f1">新投诉</strong></li>
                    	  #if($!obj.type=="buyer")
                          #set($type="买家投诉")
                          #else
                          #set($type="商家投诉")
                          #end
                    <li> 投诉类别：<b>$!type</b></li>
                    <li> 投诉人：<b>$!{of.userName}</b></li>
                  </ul>
                </dd>
              </dl>
              <dl class="comp_goodl">
                <dt>选择投诉主题</dt>
                <dd>
                  #foreach($cs in $subs)
                  <table width="100%" border="0" cellspacing="0" cellpadding="0" class="comp_table">
                    <tr>
                      <td bgcolor="#EEEEEE" style=" float:left; margin:0 10px;" class="comp_table_n">
                          <input type="radio" name="cs_id" id="radio" value="$!cs.id" #if($!velocityCount==1) checked="checked"#end/>
                        $!cs.title </td>
                      <td style="width:728px;margin-left: -1px;">$!cs.content</td>
                    </tr>
                  </table>
                    #end
                </dd>
              </dl>
              <dl class="comp_goodl">
                <dt>要投诉的商品</dt>
                <dd>
                  <table width="850" border="0" cellspacing="0" cellpadding="0" class="compgoods_table">
                    <tr class="compgoods_th">
                      <td width="300">&nbsp;</td>
                      <td width="200">商品信息</td>
                      <td width="200" align="center">数量</td>
                      <td align="center">价格</td>
                    </tr>
                    #foreach($map in $!orderFormTools.queryGoodsInfo("$!obj.orderForm.goodsInfo"))
                    #set($goods_id = "$!{map.get('goods_id')}")	
            		#set($goods_name = "$!{map.get('goods_name')}")
            		#set($goods_count = "$!{map.get('goods_count')}")
            		#set($goods_price = "$!{map.get('goods_price')}")
            		#set($goods_gsp_val = "$!{map.get('goods_gsp_val')}")
                    #set($goods_gsp_ids = "$!{map.get('goods_gsp_ids')}")
            		#set($goods_mainphoto_path = "$!{map.get('goods_mainphoto_path')}")
            		#set($img="$!{goods_mainphoto_path}")
                    #if($!goods_id==$!goods_ids)
                    <tr>
                    <input type="hidden" name="goods_gsp_ids" value="$!goods_gsp_ids"  />
                      <td><b class="comp_tab_b">
                        </b><em class="comp_tab_em"><span class="compimg_span tab_span">
                        <p><img width="80" height="80" src="$!img" /></p>
                        </span></em><span class="comp_tab_sp"><a href="$!webPath/goods_$!{goods_id}.htm" target="_blank">$!{goods_name}</a></span></td>
                      <td>$!{goods_gsp_val}</td>
                      <td align="center">$!{goods_count}</td>
                      <td align="center"><b class="c_blue">¥$!{goods_price}</b></td>
                    </tr>
                    <tr>
                      <td colspan="4"><div class="comp_question"><em class="question_desp"><span>问题描述：</span><span>
                           <input name="content_$!{goods_id}" type="text" id="content_$!{goods_id}" class="comp_txt" />
                          </span></em></div></td>
                    </tr>
                    #end
                     #end
                  </table>
                </dd>
              </dl>
              <dl class="comp_goodl">
                <dt>投诉内容:</dt>
                <dd>
                  <div class="comp_text">
                     <span style="color:#F00"><textarea name="from_user_content" cols="" rows="" id="from_user_content"></textarea></span>
                  </div>
                </dd>
              </dl>
              <dl class="comp_goodl">
                <dt>投诉图片 <b class="hui fsize12">(图片必须是$!{config.imageSuffix}格式)</b></dt>
                <dd>
                  <div class="comp_uploadimg">
                    <ul>
                      <li>
                       <input name="img1" type="file" id="img1" />
                      </li>
                      <li>
                       <input name="img2" type="file" id="img2" />
                      </li>
                      <li>
                       <input name="img3" type="file" id="img3" />
                      </li>
                    </ul>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
          		  <input name="order_id" type="hidden" id="order_id" value="$!obj.orderForm.id" />
                  <input type="hidden" name="goods_ids" id="goods_ids" value="$!goods_ids" />
                  <input name="to_user_id" type="hidden" id="to_user_id" value="$!obj.toUserId" />
                  <input name="type" type="hidden" id="type" value="$!obj.type" />
          
          <div class="comp_btn"> <span>
            <input type="submit"  value="提交"  style="cursor:pointer;" class="btn btn-blue plr-30"/>
            </span></div>
        </div>
      </div>
    </div>
    </form>
  </div>

</div>
$!httpInclude.include("/footer.htm")
</body>
</html>
