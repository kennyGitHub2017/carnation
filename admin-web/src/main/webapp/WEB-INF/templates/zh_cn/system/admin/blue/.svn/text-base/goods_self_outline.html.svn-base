<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/template.css"  rel="stylesheet" type="text/css"/>
<link href="$!webPath/resources/style/system/manage/$!{config.websiteCss}/overlay.css" type="text/css" rel="stylesheet" />
<link  href="$!webPath/resources/style/common/css/jquery-ui-1.8.22.custom.css" type=text/css rel=stylesheet>
<script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
<script src="$!webPath/resources/js/jquery-ui-1.8.21.js"></script>
<script src="$!webPath/resources/js/jquery.validate.min.js"></script>
<script src="$!webPath/resources/js/jquery.zh.cn.js" charset="utf-8"></script>
<script src="$!webPath/resources/js/jquery.poshytip.min.js"></script>
<script src="$!webPath/resources/js/jquery.shop.common.js"></script>
<script>

jQuery(document).ready(function(){
	
	  jQuery('#startTime').datepicker({
		  dateFormat:"yy-mm-dd",
		  changeMonth: true,
		  changeYear: true
	  });
	  jQuery('#endTime').datepicker({
		  dateFormat:"yy-mm-dd",
		  changeMonth: true,
		  changeYear: true
	  });
	  
		$("#timeIndex").change(function(){
		     var timeIndex=$("#timeIndex").val();
		     if(timeIndex == 5){
		    	 $("#startTime").show();
		    	 $("#endTime").show();
		     }else{
		    	 $("#startTime").hide();
		    	 $("#endTime").hide();
		     }
		});
		
		#if($!vo.timeIndex == 5)
			$("#startTime").show();
			$("#endTime").show();
		#else
			$("#startTime").hide();
			$("#endTime").hide();
		#end
		

		$("#fgcId").change(function(){
			console.log($(this).val());
			var pid=$(this).val();
			jQuery.ajax({
				type : 'POST',
				url : '$!webPath/admin/load_goods_class.htm',
				data : {
					"pid" : pid,
					"level" : 1,
					"session" : true
				},
				dataType : "json",
				beforeSend : function() {
					
				},
				success : function(data) {
					console.log(data);
					var str="";
					str+="<option value=\"\">所有分类</option>";
					jQuery.each(data,function(index, item) {
						str+="<option value=\""+item.id+"\">"+item.className+"</option>";					
					});
					$("#sgcId").empty().append(str);
					$("#tgcId").empty().append("<option value=\"\">所有分类</option>");
				}
			});
		});
		
		$("#sgcId").change(function(){
			var pid=$(this).val();
			jQuery.ajax({
				type : 'POST',
				url : '$!webPath/admin/load_goods_class.htm',
				data : {
					"pid" : pid,
					"level" : 2,
					"session" : true
				},
				dataType : "json",
				beforeSend : function() {
					
				},
				success : function(data) {
					console.log(data);
					var str="";
					str+="<option value=\"\">所有分类</option>";
					jQuery.each(data,function(index, item) {
						str+="<option value=\""+item.id+"\">"+item.className+"</option>";					
					});
					$("#tgcId").empty().append(str);
				}
			});
		});
})

jQuery(function(){
	jQuery("#brand_id").val("$!brand_id");
	jQuery("#u_admin_id").val("$!u_admin_id");
	})
</script>
<script>
//
function ajax_update(id,fieldName,obj,value){
   var val;
   if(value==undefined){
	 val=jQuery(obj).val();
   }else val=value; 
   jQuery.ajax({type:'POST',
	              url:'$!webPath/admin/goods_self_ajax.htm',
				  data:{"id":id,"fieldName":fieldName,"value":val},
				beforeSend:function(){
				  
				},
			   success:function(data){
	             if(val==""){
				   jQuery(obj).attr("src","$!webPath/resources/style/system/manage/blue/images/"+data+".png");
				 }else{
				   jQuery(obj).val(val);
				 }    
				 if(value!=undefined){
				   jQuery(obj.parentNode.parentNode).remove();
				 }
              }
	    });
}
function query_form(){
jQuery("#ListForm").submit();
	}
	
function ajax_weight_update(id,fieldName,obj,value){
	   var val;
	   if(value==undefined){
		 val=jQuery(obj).val();
	   }else val=value; 
	   jQuery.ajax({type:'POST',
		              url:'$!webPath/admin/goods_self_weight_ajax.htm',
					  data:{"id":id,"fieldName":fieldName,"value":val},
					beforeSend:function(){
					  
					},
				   success:function(data){
		             if(val==""){
					   jQuery(obj).attr("src","$!webPath/resources/style/system/manage/blue/images/"+data+".png");
					 }else{
					   jQuery(obj).val(val);
					 }    
					 if(value!=undefined){
					   jQuery(obj.parentNode.parentNode).remove();
					 }
	              }
		    });
	}

</script>
</head>
<body>
<div class="cont">
  <h3 class="seth">违规下架商品</h3>
  <div class="nav_list">
  	<ul>
    	<li><a href="$!webPath/admin/goods_self_list.htm?goodsStatus=0"><b>出售中的商品</b></a></li>
		    <li><a href="$!webPath/admin/goods_self_list.htm?goodsStatus=1"><b>仓库中的商品</b></a></li>
		    <li><a href="$!webPath/admin/goods_self_list.htm?goodsStatus=-2" class="this"><b>违规下架商品</b></a></li>
            <li style="display:none"><a href="$!webPath/admin/goods_self_report.htm"><b>被举报禁售商品</b></a></li>
    </ul>
  </div>
	<form name="ListForm" id="ListForm" action="" method="post">
    <div class="search">
		<span>商品名称</span> <span class="size100"> <input
			name="goodsName" type="text" id="goodsName" value="$!vo.goodsName" />
		</span> <span>品牌名称</span> <span> <select name="goodsBrandId"
			id="goodsBrandId">
				<option value="">所有品牌</option> #foreach($gb in $gbs)
				<option value="$!gb.id" #if($!vo.goodsBrandId==
					$!gb.id) selected="selected" #end>$!gb.name</option> #end
		</select>
		</span>  
		
		<span>商品分类</span> 
		<span> 
			<select name="fgcId" id="fgcId">
					<option value="">所有分类</option> 
					#foreach($obj in $gcs)
					<option value="$!obj.id" #if($!vo.fgcId==$!obj.id) selected="selected" #end>$!obj.name</option> 
					#end
			</select>
		</span>  
		<span> 
			<select name="sgcId" id="sgcId">
					<option value="">所有分类</option> 
					#foreach($obj in $gcs2)
					<option value="$!obj.id" #if($!vo.sgcId==$!obj.id) selected="selected" #end>$!obj.name</option> 
					#end
			</select>
		</span>  
		<span> 
			<select name="tgcId" id="tgcId">
					<option value="">所有分类</option> 
					#foreach($obj in $gcs3)
					<option value="$!obj.id" #if($!vo.tgcId==$!obj.id) selected="selected" #end>$!obj.name</option> 
					#end
			</select>
		</span> 
		
		<span>发布人</span> <span> <select name="userAdminId"
			id="userAdminId">
				<option value="">发布人姓名</option> #foreach($u_admin in $user_admins)
				<option value="$!u_admin.uid" #if($!vo.userAdminId==
					$!u_admin.uid) selected="selected" #end>$!u_admin.name</option>
				#end
		</select>
		</span> 
				<span>发布日期</span> <span class="size100">
      <input name="startTime" type="text" id="startTime" value="$!vo.startTime" readonly="readonly"/>
      </span> <span class="size100">
      <input name="endTime" type="text" id="endTime" value="$!vo.endTime" readonly="readonly"/>
      </span> 

		<span> <select name="timeIndex"
			id="timeIndex">
				<option value="">全部</option>
				<option value="1" #if($!vo.timeIndex == 1) selected="selected" #end>今天新记录</option>
				<option value="2" #if($!vo.timeIndex == 2) selected="selected" #end>昨天记录</option>
				<option value="3" #if($!vo.timeIndex == 3) selected="selected" #end>一星期内记录</option>
				<option value="4" #if($!vo.timeIndex == 4) selected="selected" #end>一月内记录</option>
				<option value="5" #if($!vo.timeIndex == 5) selected="selected" #end>自选日期</option>
		</select>
		</span> 
		<span> <input name="" type="button" value="搜索"
			style="cursor: pointer;" onclick="query_form()" class="search_btn" />
		</span>
	</div>
     <div class="operation">
    <h3>友情提示</h3>
    <ul>
      <li>出售中的商品，在商城前台所有访客均可查看</li>
      <li>仓库中的商品，暂时没有出售的商品，前台所有游不可查看</li>
      <li>违规下架商品，管理员根据商城访客举报结合实际情况设定违规，违规商品前台不可显示，只能管理员能取消违规</li>
      <li style="display:none">被举报禁售商品，管理员根据用户举报信息对商品设定为举报并且禁止销售商品</li>
    </ul>
  </div>
    <div class="fshoptb">
      <table width="100%" border="0" cellspacing="0" cellpadding="0" class="fshop_table">
        <tr>
          <th width="3%">&nbsp;</td>
          <th width="30%"><span class="form_btna">商品名称</span></th>
          <th width="20%"><span class="form_btna">商品分类</span></th>
          <th width="6%"><span class="form_btna">发布人</span></th>
          <th width="6%"><span class="form_btna">品牌</span></th> 
          <th width="3%"><span class="form_btna">商品价格</span></th> 
          <th width="3%"><span class="form_btna">购买量</span></th>
          <th width="3%"><span class="form_btna">库存量</span></th>
          <th width="3%"><span class="form_btna">状态</span></th>
          <th width="8%"><span class="form_btna">发布时间</span></th>
          <th width="3%"><span class="form_btna">权重</span></th>
          <th width="3%"><span class="form_btna">查看次数</span></th>
          <th align="center" width="10%"><b class="form_btnb">操作</b></th>
        </tr>
      #foreach($obj in $objs)
        <tr>
          <td align="center" class="check_position"><input name="checkbox" type="checkbox" id="checkbox" value="$!obj.id" /></td>
          <td>
          <span style=" display:block; float:left; margin-right:10px;">
          <a href="$!{shopPath}/goods_$!{obj.id}.htm?admin_view=true" target="_blank">
          <img src="$!{obj.goodsMainPhotoPath}" width="55px" height="55px"/>
          </a>
          </span>
          <label>
            <textarea name="textarea" cols="23" rows="2"  title="可编辑" onblur="ajax_update('$!obj.id','goodsName',this)">$!obj.goodsName</textarea>
          </label></td>
          <td align="center">#if($!obj.gc.parent.parent)$!obj.gc.parent.parent.className >#end #if($!obj.gc.parent)$!obj.gc.parent.className >#end $!obj.gc.className</td> 
          <td align="center">$!obj.userName</td>  
          <td align="center">$!obj.brandName</td> 
          <td align="center">$!obj.goodsShowPrice</td>
          <td align="center">$!obj.goodsSalenum</td>
          <td align="center">$!obj.goodsInventory</td>
          #if($!$!obj.goodsStatus == 0)
          #set($status="上架")
          #end
          #if($!$!obj.goodsStatus == 1)
          #set($status="仓库中")
          #end
          #if($!$!obj.goodsStatus == -1)
          #set($status="下架")
          #end
          #if($!$!obj.goodsStatus == -3)
          #set($status="举报禁售")
          #end
          #if($!$!obj.goodsStatus == -2)
          #set($status="违规下架")
          #end
          <td align="center">$status</td>
          <td align="center">$!CommUtil.formatShortDate($!obj.addTime)</td>
          <td align="center">
          <div class="shop_manage2">
            <label>
            <input id="sortWeight" name="sortWeight" type="text" value="$!obj.sortWeight" onblur="ajax_weight_update('$!obj.id','sortWeight',this)" style="width:40px;"/>
            </label>
            <div class="goods_edit"> 
          </div>
          </td>
          <td align="center">$!obj.goodsClick</td>
          <td class="hui oprate_con" align="center">
          	<a href="$!webPath/admin/goods_self_edit.htm?id=$!obj.id" class="blue">编辑</a>
            <a href="javascript:if(confirm('删除后不可恢复?'))window.location.href='$!webPath/admin/goods_self_del.htm?mulitId=$!obj.id&op=out'" class="blue">删除</a>
          </td>
        </tr>
     #end
    </table>
    </div>
    <div class="operate_bar">
        <div class="fenye">
            <span id="queryCondition" style="display:none">
            #foreach($sm in $sms)
            <input name="$!sm.key" id="$!sm.key" type="hidden" value="$!sm.value"/>
            #end
            </span>
            <input name="mulitId" type="hidden" id="mulitId" />
        	<input name="currentPage" type="hidden" id="currentPage" value="$!currentPage" />
       		$!gotoPageFormHTML      
        </div> 
   		<div class="oper_sp">
        	<span class="oper_check"><label for="all"><input type="checkbox" name="all" id="all" value="" onclick="selectAll(this)"/>全部</label></span>
           	<span class="oper_del"><input name="" type="button" value="删除" onclick="cmd('$!webPath/admin/goods_self_del.htm?op=out');" style="cursor:pointer;" /></span>
        </div>          
 	</div>
  </form>
</div>
</body>
</html>
