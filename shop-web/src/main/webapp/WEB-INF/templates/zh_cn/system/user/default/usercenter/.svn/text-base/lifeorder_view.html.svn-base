<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>我的在线服务订单</title>
    <link href="$!webPath/resources/style/system/front/default/css/public.css?v=2" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/common/css/overlay.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/system/front/default/css/user.css" type="text/css" rel="stylesheet"/>
    <link href="$!webPath/resources/style/service/public.css" type="text/css" rel="stylesheet"/>

    <script src="$!webPath/resources/js/jquery-1.6.2.js"></script>
    <script src="$!webPath/resources/js/jquery.shop.common.js"></script>

</head>
<body>
$!httpInclude.include("/top.htm")
$!httpInclude.include("/group/head.htm")
$!httpInclude.include("/group/nav.htm")

#set($map = $!orderFormTools.queryGroupInfo("$!order.groupInfo"))
#set($goods_id = "$!{map.get('goods_id')}")	
#set($goods_name = "$!{map.get('goods_name')}")	
#set($goods_begin_time = "$!{map.get('goods_begin_time')}")
#set($goods_end_time = "$!{map.get('goods_end_time')}")
#set($goods_total_price = "$!{map.get('goods_total_price')}")
#set($goods_mainphoto_path = "$!{map.get('goods_mainphoto_path')}")
#set($goods_price = "$!{map.get('goods_price')}")

<div class="main clearfix">
    <div class="position"><a href="$!webPath/index.htm"><b>首页</b></a><i>&gt;</i>
    <a href="$!webPath/buyer/group.htm?orderType=1">我的订单</a><i>&gt;</i>$!order.orderId</div>
    <div class="order_pay">
        <div class="order_pay_note">
            #if($!order.orderStatus==10)
               #set($status="未支付")
             #end
             #if($!order.orderStatus==0)
               #set($status="已取消")
             #end
             #if($!order.orderStatus==20)
               #set($status="已支付")
             #end
             #if($!order.orderStatus==30)
               #set($status="已使用")
             #end
             #if($!order.orderStatus>=50)
               #set($status="已完成")
             #end
            <h3><span>订单号：$!order.orderId</span><span>状态：<b style="color:#f60;">$!status</b> </span></h3>
        </div>
    </div>
    <div class="order-view-box">
        <div class="order-view-title">订单信息</div>
        <div class="order-view-cont">
            <div class="col-md-3">订单编号：$!order.orderId </div>
            <div class="col-md-6">下单时间：$!CommUtil.formatLongDate($!order.addTime)</div>
            <div class="col-md-3">付款方式：$PaymentConstants.getPaymentName($!order.paymentMark)</div>
            <div class="col-md-6">付款时间：$!CommUtil.formatLongDate($!order.payTime)</div>
            <div class="col-md-3">有效期：$!{goods_begin_time} 至 $!{goods_end_time}</div>
            <div class="col-md-6">订单金额：¥$!goods_total_price</div>
        </div>
    </div>

    <div class="order-view-box">
        <div class="order-view-title">购买信息</div>
        <div class="order-view-cont">
            <div class="col-md-3">消费者：$!order.userCustomer.nickname</div>
            <div class="col-md-3"> </div>
            <div class="col-md-3">手机号码：$!order.userCustomer.mobile</div>

            <table width="100%" cellspacing="0" cellpadding="0" border="0" class="user_order_table order_view_table">
                <tr>
                    <th align="left" width="35%">购买项目</th>
                    <th width="20%">消费码</th>
                    <th width="15%">状态</th>
                    <th width="15%">支付金额</th>
                    <th width="15%">&nbsp;</th>
                </tr>
                
                
                #foreach($obj in $infos)
                <tr>
                    <td>
                        <a class="order_img_a" target="_blank" href="$!webPath/group/view_$!{goods_id}.htm">
                            <img width="108" height="78" src="$!goods_mainphoto_path">
                        </a>
                        <div class="order_buy_data">
                            <a href="$!webPath/group/view_$!{goods_id}.htm" class="title ell" target="_blank">$!goods_name</a>
                            <div class="c_gray">有效期至：$!{goods_begin_time} 至 $!{goods_end_time}</div>
                            <a href="$!webPath/group/store.htm?id=$!order.storeId" class="c_blue" target="_blank"> 商家信息</a>
                        </div>
                    </td>
                    <td align="center">$!obj.groupSn</td>
                     #if($!obj.status==0 || $!obj.status==6)
		               #set($infoStatus="未使用")
		             #end
		             #if($!obj.status==1)
		               #set($infoStatus="已使用")
		             #end
		             #if($!obj.status==-1)
		               #set($infoStatus="已过期")
		             #end
		             #if($!obj.status==3)
		               #set($infoStatus="退款审核中")
		             #end
		             #if($!obj.status==5)
		               #set($infoStatus="退款审核通过")
		             #end
		             #if($!obj.status==7)
		               #set($infoStatus="完成退款")
		             #end
                    <td align="center">$!infoStatus</td>
                    <td align="center">
                        <span class="c_blue">¥$!goods_price</span>
                    </td>
                    <td align="center">
                        #if($!obj.status==0)
                        <a href="javascript:refund($!obj.id)" class="btn btn-blue btn-mini">退款</a>
                        #end
                        #if($!obj.status==5) 审核通过 #end
                        #if($!obj.status==6) <!-- 审核不通过 --><a href="javascript:refund($!obj.id)" class="btn btn-blue btn-mini">退款</a> #end
                        #if($!obj.status==7) 退款完成 #end
                    </td>
                </tr>
                #end
            </table>
        </div>
    </div>
</div>

$!httpInclude.include("/footer.htm")

<script>
function refund(wid) {
    /*   showDialog("warning","","确定退款吗？",1,"warning",3,function() {
    	location.href = '/buyer/refundInfo_view.htm?id=' + wid;
    }); */
	showDialog("question","请输入退款原因！","退款原因不能为空！",3,"question",3,function(val){
		 if(val=="")
		    {
		    showDialog("question","","退款原因不能为空！",2,"question",3,function(){})
		    }else if(val!=null){
		    	location.href = '/buyer/refundInfo_view.htm?id=' + wid+"&refundReasion="+val;
		    }
	 },"input");
}

</script>

<button onclick="test()">testfsfsdfsfsffdsfsfsfsffsfsfs </button>
</body>
</html>
