    jQuery(document).ready(function(){ 
	    wxConfig('${appId}',${timestamp},'${nonceStr}','${signature}');
	    
	    var title='我向您推荐云尚！';
	    var desc='加入云尚，立马赠送20积分，积分可兑换商品！速点！';
	    var link='${currentUrl}';
	    var imgUrl='http://static.ysysgo.com/static/person.png';
	    wxReady(title,desc,link,imgUrl);
    });
    </script>

</body>
</html>